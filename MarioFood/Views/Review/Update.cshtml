@model MarioFood.Models.Review


<div class="page-header"><h4>Edit @Model.ReviewAuthor's Review</h4>
</div>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ReviewId)
    @Html.HiddenFor(model => model.ProductId)

    <label>Name</label>
    @Html.EditorFor(model => model.ReviewAuthor, new { htmlAttributes = new { @class = "form-control" } })

    <label>Cost</label>
    @Html.EditorFor(model => model.ReviewContentBody, new { htmlAttributes = new { @class = "form-control" } })

    <label>Country of Origin</label>
    @Html.EditorFor(model => model.ReviewRating, new { htmlAttributes = new { @class = "form-control", htmlAttributes = new { min = 1, max = 5 } } })

    <input type="Submit" value="Save" class ="btn btn-info"/>

    <input type="button" class="btn btn-warning" value="Back" onclick="location.href='@Url.Action("Details", "Product", new { ProductId = @Model.ProductId })'" />
}

